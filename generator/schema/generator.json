{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/kamontat/fthelper/main/generator/schema/generator.json",
  "type": "object",
  "title": "configuration",
  "description": "root configuration for generators",
  "required": ["generators"],
  "properties": {
    "generators": {
      "type": "array",
      "title": "The generators schema",
      "description": "list of generators for generate data",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "json"
              },
              "withCluster": {
                "type": "boolean",
                "description": "template data will be override with custom cluster override value",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "inputs": {
                "type": "string"
              },
              "output": {
                "type": "string"
              },
              "merger": {
                "type": "object",
                "additionalProperties": {
                  "oneOf": [
                    {
                      "type": "number",
                      "enum": [0, 1]
                    },
                    {
                      "type": "object",
                      "$ref": "#/properties/generators/items/oneOf/0/properties/merger"
                    }
                  ]
                }
              }
            },
            "required": ["type", "inputs", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "create"
              },
              "withCluster": {
                "type": "boolean",
                "description": "template data will be override with custom cluster override value",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "output": {
                "type": "string"
              }
            },
            "required": ["type", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "copy"
              },
              "withCluster": {
                "type": "boolean",
                "description": "template data will be override with custom cluster override value",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "input": {
                "type": "string"
              },
              "output": {
                "type": "string"
              }
            },
            "required": ["type", "input", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "template"
              },
              "withCluster": {
                "type": "boolean",
                "description": "template data will be override with custom cluster override value",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "input": {
                "type": "string"
              },
              "output": {
                "type": "string"
              }
            },
            "required": ["type", "input", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "strategy",
                "description": "similar to 'template' type but custom to support auto find path"
              },
              "withCluster": {
                "type": "boolean",
                "description": "template data will be override with custom cluster override value",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "name": {
                "type": "string",
                "description": "strategy name with extension (e.g. Strategy.py)"
              },
              "input": {
                "type": "string",
                "default": "template"
              },
              "output": {
                "type": "string",
                "default": "freqtrade"
              }
            },
            "required": ["type", "name"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "config",
                "description": "similar to 'json' type but custom to support auto find path"
              },
              "withCluster": {
                "type": "boolean",
                "description": "template data will be override with custom cluster override value",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "clusterSuffix": {
                "type": "boolean",
                "description": "add cluster to suffix. this always be last one",
                "default": false
              },
              "suffix": {
                "type": "string",
                "description": "add custom suffix to config filename",
                "default": ""
              },
              "input": {
                "type": "string",
                "default": "template"
              },
              "output": {
                "type": "string",
                "default": "freqtrade"
              },
              "merger": {
                "type": "object",
                "additionalProperties": {
                  "oneOf": [
                    {
                      "type": "number",
                      "enum": [0, 1]
                    },
                    {
                      "type": "object",
                      "$ref": "#/properties/generators/items/oneOf/5/properties/merger"
                    }
                  ]
                }
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "docker",
                "description": "create docker-compose from input data"
              },
              "withCluster": {
                "type": "boolean",
                "description": "template data will be override with custom cluster override value",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "name": {
                "type": "string",
                "description": "template filename",
                "default": "docker-compose.yml"
              },
              "freqtrades": {
                "type": "array",
                "description": "cluster name",
                "items": {
                  "type": "string"
                }
              },
              "ftmetric": {
                "type": "boolean",
                "description": "add support ftmetric on each freqtrade cluster"
              },
              "input": {
                "type": "string",
                "default": "template"
              },
              "output": {
                "type": "string",
                "default": "freqtrade"
              }
            },
            "required": ["type", "name"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "additionalProperties": true
}
